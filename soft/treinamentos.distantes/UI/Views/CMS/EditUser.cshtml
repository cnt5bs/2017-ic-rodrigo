@model UI.ViewModels.EditUserVM
@{
    ViewBag.Title = "UsersNotAdm";
}

@Html.Partial("InnerMenu", Model.autorization)

<div class="row">
    <div class="col-xs-12 col-sm-6" style="margin-top:50px">
        <div class="card text-center" style="padding:40px;width:100%!important;cursor:pointer">
            <div class="container text-left">
                <div class="col-xs-12">
                    <h4>Editando usuário : @Model.userEdit.name</h4>

                    <form method="post" action="@Url.Content("~/CMS/SaveEditUser")">
                        <input type="hidden" name="ID" class="form-control" value="@Model.userEdit.ID" />
                        <label>Login</label>
                        <input type="text" name="login" class="form-control" value="@Model.userEdit.login" />
                        <label>Senha</label>
                        <input type="password" name="password" class="form-control" value="@Model.userEdit.password" />
                        <label>Nome</label>
                        <input type="text" name="name" class="form-control" value="@Model.userEdit.name" />
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" value="@Model.userEdit.email" />
                        <input type="hidden" name="userID" value="@Model.autorization.user.ID" />
                        <input type="submit" class="btn btn-default" value="Registrar" style="margin-top:10px" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("Base", Model.autorization)