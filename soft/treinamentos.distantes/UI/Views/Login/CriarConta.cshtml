
@{
    ViewBag.Title = "CriarConta";
}

<h2>CriarConta</h2>

<form method="post" action="@Url.Content("~/Login/createAccount")">
    <label>Login</label>
    <input type="text" name="login" class="form-control" />
    <label>Senha</label>
    <input type="password" name="password" class="form-control" />
    <label>Nome</label>
    <input type="text" name="name" class="form-control" />
    <label>Email</label>
    <input type="email" name="email" class="form-control" />
    <label>Adm</label>
    <input type="text" name="adm" class="form-control" />
    <input type="submit" class="btn btn-default" value="Registrar-se" style="margin-top:10px"/>
</form>